            </small>
            <div class="trix-content">
              <pre>var csrfToken = document.querySelector('[name=csrf-token]')<br>fetch('http://localhost:3000/api/v1/todo_items/<%= @todo_item.id %>', {<br>&nbsp; credentials: 'include',<br>&nbsp; headers: {<br>&nbsp; &nbsp; accept: 'application/json, text/plain, */*',<br>&nbsp; 'accept-language': 'en-US,en;q=0.9', <br>&nbsp; &nbsp; 'cache-control': 'no-cache',<br>&nbsp; &nbsp; pragma: 'no-cache', 'sec-fetch-dest': 'empty', 'sec-fetch-mode': 'cors',<br>&nbsp; &nbsp; 'sec-fetch-site': 'same-origin', 'x-csrf-token': csrfToken.content,<br>&nbsp; },<br>&nbsp; referrer: 'http://localhost:3000/',<br>&nbsp; referrerPolicy: 'strict-origin-when-cross-origin',<br>&nbsp; body: null,<br>&nbsp; method: 'Delete',<br>&nbsp; mode: 'cors',<br>})</pre>
            </div><!-- .trix-content -->
          </div><!-- .accordion-body -->
        </div><!-- #flush-collapseThree -->
      </div><!-- .accordion-item -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="flush-todoFour">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
            API Links
          </button>
        </h2>
        <div id="flush-collapseFour" class="accordion-collapse collapse" aria-labelledby="flush-todoFour" data-bs-parent="#accordionFlushToDo">
          <div class="accordion-body">
            <p>Index:
              <a href="/api/v1/todo_items" target="_blank">
                /api/v1/todo_items
              </a>
            </p>
            <p> Show:
              <a href="/api/v1/todo_items/<%= @todo_item.id %>" target="_blank">
                /api/v1/todo_items/<%= @todo_item.id %>
              </a>
            </p>
          </div><!-- .accordion-body -->
        </div><!-- #flush-collapseFour -->
      </div><!-- .accordion-item -->
    </div><!-- #accordionFlushToDo -->
  </section><!-- .mb-5 .pb-5 -->

  <div class="divider"></div>

