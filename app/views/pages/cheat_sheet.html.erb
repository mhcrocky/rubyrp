<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Cheat Sheet</h1>
    <p class="lead text-start text-muted">
      Create, Read, Update, and Destroy models in the JavaScript console. Included are API links.
      <% if !user_signed_in? %>
        <%= link_to('Sign in', new_user_session_path, data: { turbo: false }) %> to view &amp; use the code.
      <% end %>
    </p>
  </div><!-- .container -->
</section><!-- .jumbotron -->

<% if user_signed_in? %>

  <section class="mb-5 pb-5">
    <h4 class="jumbotron-heading">
      ToDo Items <small>(JS Console + API Links)</small>
    </h4>
    <div class="accordion accordion-flush card" id="accordionFlushToDo">
      <div class="accordion-item">
        <h2 class="accordion-header" id="flush-todoOne">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
            Create
          </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-todoOne" data-bs-parent="#accordionFlushToDo">
          <div class="accordion-body">
            <div class="trix-content">
